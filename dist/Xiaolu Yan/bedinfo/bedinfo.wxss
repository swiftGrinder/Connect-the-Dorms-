/* pages/bedinfo/bedinfo.wxss */

.view_contain {
  width: 100%;
  height: 100%;
  background: rgba(250, 231, 179, 0.795);
}

.image {
  width: 100%;
  /* 调整图片展示区域的高度 */
  height: 200px;
  /* 圆角化处理，使图片的四角都有圆角 */
  border-radius: 20px 20px 20px 20px;
  margin-bottom: 1%;
}

.basic-info {
  width: 100%;
  /* 调整图片展示区域的高度 */
  height: 100%;
  /* 圆角化处理，使basic-info区域的四角有圆角 */
  border-radius: 20px 20px 20px 20px;
  background: rgb(255, 255, 255);
  margin-top: 1%;
  margin-bottom: 1%;
}




.other-info {
  width: 100%;
  height: 100%;
  /* 调整图片展示区域的高度 */
  border-radius: 10px 10px 0 0;
  /* 圆角化处理，使图片上半部分有圆角 */
  background: rgb(255, 255, 255);
  margin-top: 1%;
}

