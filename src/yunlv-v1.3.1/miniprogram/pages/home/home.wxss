/* pages/home/home.wxss */
page {
  width: 100%;
  height: 100%;
}

.view_contain {
  width: 100%;
  background: rgba(250, 231, 179, 0.795)
}

.view_block {
  width: 90%;
  margin-left: 5%;
  margin-top: 5%;
  margin-bottom: 20%;
  background: rgba(250, 231, 179, 0.795)
}

.display-frame {
  width: 100%;
  border-radius: 10px;
  /* 圆角化处理 */
  overflow: hidden;
  /* 避免圆角被图片溢出 */
  background-color: #f0f0f0;
  /* 背景颜色，可以根据需要调整 */
  margin-top: 5%;
}

.image {
  width: 100%;
  height: 100px;
  /* 调整图片展示区域的高度 */
  border-radius: 10px 10px 0 0;
  /* 圆角化处理，使图片上半部分有圆角 */
}

.summary {
  margin-top: 10px;
  /* 调整摘要信息区域与图片展示区域的间距 */
  font-size: 14px;
  color: #333;
}

.text-info {
  flex: 1;
  /* 新增属性 */
}


.main-name {
  font-size: 16px;
  font-weight: bold;
}

.sub-name {
  display: flex;
  font-size: 12px;
  align-items: center;
}

.like-info {
  font-size: 14px;
  color: #666;
  margin-top: 10px;
  margin-left: 00px;
}